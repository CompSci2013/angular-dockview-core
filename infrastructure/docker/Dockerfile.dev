# Development container for Angular 13 development
FROM node:16-alpine

# Install required build tools for native dependencies
RUN apk add --no-cache python3 make g++

# Install Angular CLI v13.3.11 globally to match project
RUN npm install -g @angular/cli@13.3.11

# Set working directory
WORKDIR /app

# Expose ports for ng serve (4200) and debugging (9229)
EXPOSE 4200 9229

# Volume mount point for source code
VOLUME ["/app"]

# Default command to start development server with hot reload
CMD ["ng", "serve", "--host", "0.0.0.0", "--poll=2000", "--disable-host-check"]
